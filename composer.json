{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "lophtus/laravel-sakila",
    "type": "project",
    "description": "A system for managing film rentals.",
    "keywords": [
        "sakila",
        "film",
        "rental"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "gregoryduckworth/encryptable": "^1.0",
        "laravel/framework": "^11.31",
        "laravel/legacy-factories": "^1.4",
        "laravel/tinker": "^2.9",
        "spatie/laravel-json-api-paginate": "^1.14",
        "spatie/laravel-query-builder": "6.2.2",
        "zircote/swagger-php": "^3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "jkocik/laravel-profiler": "^2.0.3",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "classmap": [
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": ["@install-hooks"],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@install-hooks"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "install-hooks": [
            "@php ./contrib/setup"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
